{
    "compilerOptions":{
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "baseUrl":"./src",
        "paths":{
            "@/*":["src/*"]
        },
        "outDir":"./dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": true
    },
    "include" : ["src/**/*"],
    "exclude" : ["dist", "node_modules"]
}